@{
}
@model FormularioASPNET.Models.Asistencia

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Asistencia</h2>
        <form asp-controller="Asistencia" asp-action="Editar" method="post">
            <input asp-for="IdAsistencia" type="hidden" />
            <div class="mb-3">
                <label>Alumno</label>
                <select class="form-control" asp-for="IdAlumno" asp-items="ViewBag.Alumnos"></select>
            </div>
            <div class="mb-3">
                <label>Fecha</label>
                <input class="form-control" asp-for="Date" type="date" />
            </div>
            <div class="mb-3">
                <input class="form-check-input" asp-for="Presente" type="checkbox" id="chkPresente" />
                <label class="form-check-label" for="chkPresente">Presente</label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Asistencia" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>