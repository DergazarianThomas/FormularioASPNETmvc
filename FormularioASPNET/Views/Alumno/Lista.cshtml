@{
}
@model List<FormularioASPNET.Models.Alumno>;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista Alumnos</h2>
        <a asp-controller="Alumno" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Documento</th>
                    <th>Nacimiento</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdAlumno</td>
                        <td>@item.NombreAlumno</td>
                        <td>@item.Documento</td>
                        <td>@item.Nacimiento</td>
                        <td>@(item.Activo ? "SI": "NO")</td>
                        <td>

                            <a asp-controller="Alumno" 
                            asp-action="Editar"
                            asp-route-id="@item.IdAlumno"
                            class="btn btn-success mb-3">Editar</a>

                            <a asp-controller="Alumno"
                               asp-action="Eliminar"
                               asp-route-id="@item.IdAlumno"
                               onclick="return confirmar()"
                               class="btn btn-danger mb-3">Eliminar</a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        function confirmar() {
            confirm("Esta seguro que quiere eliminar el Alumno?")
        }
    </script>
}