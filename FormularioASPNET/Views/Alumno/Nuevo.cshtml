@model FormularioASPNET.Models.Alumno;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo Alumnos</h2>
        <form asp-controller="Alumno" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Nombre Completo</label>
                <input class="form-control" asp-for="NombreAlumno" type="text"/>
            </div>
            <div class="mb-3">
                <label>Documento</label>
                <input class="form-control" asp-for="Documento" type="number" />
            </div>
            <div class="mb-3">
                <label>Nacimiento</label>
                <input class="form-control" asp-for="Nacimiento" type="date" />
            </div>
            <div class="mb-3">
                <input class="form-check-input" asp-for="Activo" type="checkbox" id="chkActivo" />
                <label class="form-check-label" for="chkActivo">Activo</label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Agregar</button>
                <a asp-controller="Alumno" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>

    </div>
</div>